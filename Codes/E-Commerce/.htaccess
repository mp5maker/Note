RewriteEngine on

RewriteRule ^index/?$ index.php [NC,L]
RewriteRule ^register/?$ includes/register.php [NC,L]
RewriteRule ^contact/?$ includes/contact.php [NC,L]
RewriteRule ^about/?$ includes/about.php [NC,L]
RewriteRule ^ipn/?$ includes/ipn.php [NC,L]

RewriteRule ^register/?$ includes/register.php [NC,L]
RewriteRule ^forgot-password/?$ includes/forgot_password.php [NC,L]
RewriteRule ^change-password/?$ includes/change_password.php [NC,L]
RewriteRule ^renew-account/?$ includes/renew_account.php [NC,L]

RewriteRule ^logout/?$ includes/logout.php [NC,L]
RewriteRule ^login-form/?$ includes/login_form.inc.php [NC,L]

RewriteRule ^add-page/?$ includes/add_page.php [NC,L]
RewriteRule ^add-pdf/?$ includes/add_pdf.php [NC,L]

RewriteRule ^category/?$ includes/category.php [NC,L]
RewriteRule ^category/([0-9]+)?$ includes/category.php?id=$1 [NC,L]

RewriteRule ^category/page/?$ includes/page.php [NC,L]
RewriteRule ^category/page/([0-9]+)?$ includes/page.php?id=$1 [NC,L]

RewriteRule ^pdf/?$ includes/pdf.php [NC,L]
RewriteRule ^pdf/view-pdf/([0-9]+)?$ includes/view_pdf.php?id=$1 [NC,L]
